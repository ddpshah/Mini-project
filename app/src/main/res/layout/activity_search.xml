<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search"
    android:background="@drawable/background1"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/questrial"
        android:text="Car Details"
        android:textColor="@color/white"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_numberplateview"
        android:layout_width="353dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_field"
        android:fontFamily="@font/questrial"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_registration_number"
        android:layout_width="353dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_field"
        android:fontFamily="@font/questrial"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_numberplateview" />

    <TextView
        android:id="@+id/tv_engine_no"
        android:layout_width="353dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_field"
        android:fontFamily="@font/questrial"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_registration_number" />

    <TextView
        android:id="@+id/tv_owner_name"
        android:layout_width="353dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_field"
        android:fontFamily="@font/questrial"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_engine_no" />

    <TextView
        android:id="@+id/tv_vehicle_class"
        android:layout_width="353dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_field"
        android:fontFamily="@font/questrial"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_owner_name" />

    <TextView
        android:id="@+id/tv_fuel_type"
        android:layout_width="353dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_field"
        android:fontFamily="@font/questrial"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_vehicle_class" />

    <TextView
        android:id="@+id/tv_model"
        android:layout_width="353dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_field"
        android:fontFamily="@font/questrial"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fuel_type" />

    <TextView
        android:id="@+id/tv_rc_status"
        android:layout_width="353dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_field"
        android:fontFamily="@font/questrial"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_model" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_numberplateview"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back" />

    <TextView
        android:id="@+id/bottomline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/questrial"
        android:text="@string/powered_by_grp_2_batch_c"
        android:textColor="@color/slight_grey"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963"
        tools:ignore="SmallSp" />
</androidx.constraintlayout.widget.ConstraintLayout>